<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/state_normal" android:drawable="@drawable/gradient_normal"/>
    <item android:id="@+id/state_pressed" android:drawable="@drawable/gradient_pressed"/>

    <transition
        android:fromId="@+id/state_normal"
        android:toId="@+id/state_pressed">
        <animation-list>
            <item android:duration="150" android:drawable="@drawable/gradient_pressed"/>
        </animation-list>
    </transition>
</animated-selector>